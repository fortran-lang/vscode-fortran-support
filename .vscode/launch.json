{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "id": "test",
      "type": "pickString",
      "description": "Pick the type of test for this session",
      "default": "unitTest",
      "options": [
        {
          "label": "unitTest",
          "value": "unitTest"
        },
        {
          "label": "integration",
          "value": "integration"
        }
      ]
    }
  ],
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Launch Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/test/fortran",
        "--disable-extension=fortran-lang.linter-gfortran",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/runner"
      ],
      "env": {
        "TEST_TYPE": "${input:test}"
      },
      "outFiles": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/out/test/**/*.js"],
      "preLaunchTask": "npm: pretest"
    },
    {
      "name": "Debug UI Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vscode-extension-tester/out/cli.js",
      "args": [
        "setup-and-run",
        "${workspaceFolder}/out/test/ui/*.js",
        "--mocha_config",
        "${workspaceFolder}/test/ui/.mocharc.js"
      ],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "console": "integratedTerminal",
      "runtimeExecutable": "node",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm: pretest"
    }
  ]
}
